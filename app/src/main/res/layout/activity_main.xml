<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btn_click"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Click Me!"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/et_user"
        app:cornerRadius="20dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp"
        android:layout_margin="5dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btn_share"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Share"
        android:layout_below="@+id/et_user"
        android:layout_toEndOf="@+id/btn_click"
        app:cornerRadius="20dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp"
        android:layout_toRightOf="@+id/btn_click"
        android:layout_margin="5dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btn_recyclerView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="RecyclerView"
        android:layout_below="@+id/btn_click"
        app:cornerRadius="20dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp"
        android:layout_margin="5dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btn_calculator"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Calculator"
        android:layout_below="@+id/btn_click"
        android:layout_toEndOf="@+id/btn_recyclerView"
        android:layout_toRightOf="@+id/btn_recyclerView"
        app:cornerRadius="20dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp"
        android:layout_margin="5dp"/>


</RelativeLayout>